<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FAD1D1"
    tools:context=".screen.grade.GradeFragment">

    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý điểm" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListGrade"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tvTrungBinh"
        android:text="Trung bình học kỳ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_red_button"
            android:id="@+id/showGradeChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:text="Xem biểu đồ điểm" />

        <Button
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_red_button"
            android:id="@+id/btnAddGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm điểm môn học"/>
    </LinearLayout>
</LinearLayout>